<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="780.0">
         <children>
            <ImageView fitHeight="480.0" fitWidth="800.0" layoutX="-4.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../LoadingScreen.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="56.0" fitWidth="200.0" layoutX="472.0" layoutY="166.0" pickOnBounds="true" preserveRatio="true" styleClass="zoom">
               <image>
                  <Image url="@../button_new-game.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="56.0" fitWidth="200.0" layoutX="522.0" layoutY="240.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../button_load-game.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="45.0" fitWidth="128.0" layoutX="599.0" layoutY="305.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../button_exit.png" />
               </image>
            </ImageView>
            <Button layoutX="522.0" layoutY="239.0" mnemonicParsing="false" opacity="0.0" prefHeight="44.0" prefWidth="200.0" text="Load Game">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button layoutX="472.0" layoutY="166.0" mnemonicParsing="false" onAction="#NewGamePressed" opacity="0.0" prefHeight="45.0" prefWidth="200.0" text="New Game">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button layoutX="599.0" layoutY="305.0" mnemonicParsing="false" onAction="#ExitPressed" opacity="0.0" prefHeight="44.0" prefWidth="103.0" text="Exit">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </AnchorPane>
   </children>
</GridPane>
